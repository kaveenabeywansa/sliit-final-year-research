<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Signup2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Known Associates"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/lbl_no_data_warning"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="No Associates selected !"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/selected_associate_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Add Associates0"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/txt_search_associates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Search to add known associates"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/darkblue"
        android:text="Search"
        android:textColor="@color/white" />

    <ListView
        android:id="@+id/associate_search_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/darkblue"
        android:text="Create Account"
        android:layout_marginTop="15dp"
        android:layout_gravity="center|bottom"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_no_data_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No users found !"
        android:textAlignment="center"
        android:visibility="gone" />

</LinearLayout>